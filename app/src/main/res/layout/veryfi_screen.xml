<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_button_login"
    android:padding="16dp">

    <!-- Nút Back -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/back" />

    <!-- Tiêu đề với biểu tượng Verify -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/ivVerifyIcon"
            android:layout_width="88dp"
            android:layout_height="88dp"
          />


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận mã code"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textColor="@android:color/black" />
    <!-- Các ô vuông để nhập mã code -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <!-- Mỗi ô nhập mã code -->
        <EditText
            android:id="@+id/etCode1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="34sp" />
        <EditText
            android:id="@+id/etCode2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="34sp" />
        <EditText
            android:id="@+id/etCode3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="34sp" />
        <EditText
            android:id="@+id/etCode4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="34sp" />

        <!-- Tạo 5 ô tương tự -->
        <!-- Thêm những ô này vào sau ô đầu tiên với id khác nhau: etCode2, etCode3, v.v. -->
        <!-- Bạn có thể copy các ô và thay đổi id cho từng ô -->

    </LinearLayout>

    <!-- Nút Resend Code -->
    <Button
        android:id="@+id/btnResendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="Gửi lại mã"
        android:textColor="@color/design_default_color_on_primary"
        android:background="@drawable/background_button_login" />

    <!-- Nút Xác nhận -->
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Xác nhận"
        android:textColor="@android:color/white"
        android:background="@color/blue" />

</LinearLayout>
